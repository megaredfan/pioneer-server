<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE shardingConfig PUBLIC "-//shardbatis.googlecode.com//DTD Shardbatis 2.0//EN"
  "http://shardbatis.googlecode.com/dtd/shardbatis-config.dtd">
<shardingConfig>
        <!--
                ignoreList可选配置
                ignoreList配置的mapperId会被分表参加忽略解析,不会对sql进行修改
        -->
        <ignoreList>
                <value>com.google.code.shardbatis.test.mapper.AppTestMapper.insertNoShard</value>
        </ignoreList>
        <!-- 
                parseList可选配置
                如果配置了parseList,只有在parseList范围内并且不再ignoreList内的sql才会被解析和修改
       -->
        <parseList>
        	<value>cn.litgame.wargame.log.mapper.CommonsMapper.recordLogin</value>
        	<value>cn.litgame.wargame.log.mapper.CommonsMapper.getLoginCount</value>
        	<value>cn.litgame.wargame.log.mapper.CommonsMapper.getDayLoginPlayerId</value>
        	<value>cn.litgame.wargame.log.mapper.CommonsMapper.recordPlayer</value>
        	<value>cn.litgame.wargame.log.mapper.CommonsMapper.recordAdmin</value>
        	<value>cn.litgame.wargame.log.mapper.CommonsMapper.getPlayerLog</value>
        	<value>cn.litgame.wargame.log.mapper.CommonsMapper.getPlayerLogByDateAndId</value>
        	<value>cn.litgame.wargame.log.mapper.CommonsMapper.getAdminLogByDate</value>
        	<value>cn.litgame.wargame.log.mapper.CommonsMapper.recordMessage</value>
        	<value>cn.litgame.wargame.log.mapper.CommonsMapper.getMessageLogByDate</value>
        </parseList>
         
        <!-- 
                配置分表策略
        -->   
        <strategy tableName="login_log_template" strategyClass="cn.litgame.wargame.log.shardTable.CommonsLogShard"/>  
        <strategy tableName="login_log_date" strategyClass="cn.litgame.wargame.log.shardTable.LoginCountShard"/> 
        <strategy tableName="player_log_template" strategyClass="cn.litgame.wargame.log.shardTable.CommonsLogShard"/>  
        <strategy tableName="player_log_date" strategyClass="cn.litgame.wargame.log.shardTable.LoginCountShard"/> 
        <strategy tableName="admin_log_template" strategyClass="cn.litgame.wargame.log.shardTable.CommonsLogShard"/>  
        <strategy tableName="admin_log_date" strategyClass="cn.litgame.wargame.log.shardTable.LoginCountShard"/> 
        <strategy tableName="message_log_template" strategyClass="cn.litgame.wargame.log.shardTable.CommonsLogShard"/>  
        <strategy tableName="message_log_date" strategyClass="cn.litgame.wargame.log.shardTable.LoginCountShard"/> 
 		<strategy tableName="payment_log_template" strategyClass="cn.litgame.wargame.log.shardTable.CommonsLogShard"/>  
        <strategy tableName="payment_log_date" strategyClass="cn.litgame.wargame.log.shardTable.LoginCountShard"/> 
 
</shardingConfig>